<Window x:Class="proekt1.Window7"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proekt1"
        mc:Ignorable="d"
        Title="Window7" Height="450" Width="800">

    <Grid >
        <DataGrid x:Name="LeaderboardDataGrid" FontSize="20" RowHeight="40"   >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Nickname}" FontSize="20" Foreground="White"  />
                <DataGridTextColumn  Binding="{Binding Score}" FontSize="20" Foreground="White"    />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
